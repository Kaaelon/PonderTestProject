<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/centerText"
        android:text="How would you like to be inspired?"
        android:textColor="#FFFFFF"
        android:textSize="20dp"
        android:gravity="center"
        android:layout_marginBottom="57dp"
        android:layout_above="@+id/linearLayout6"
        android:layout_centerHorizontal="true" />

    <fragment
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:name="testproject.halfmoonstudios.com.ponder.OptionsFragment"
        android:id="@+id/fragment"
        android:layout_alignParentBottom="true"
        tools:layout="@layout/fragment_options" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="0"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="false"
        android:layout_alignParentStart="false"
        android:id="@+id/linearLayout6">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:id="@+id/linearLayout2"
            android:layout_centerVertical="true"
            android:layout_weight="1"
            android:layout_marginLeft="15dp">

            <ImageView
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:id="@+id/griefView"
                android:contentDescription="@string/button_grief"
                android:src="@drawable/grief_white"/>

            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="@string/button_grief"
                android:id="@+id/griefText"
                android:layout_marginLeft="13dp"
                android:contentDescription="@string/button_grief"
                android:textColor="#FFFFFF"/>
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/linearLayout"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_weight="1">

            <ImageView
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:id="@+id/wellbeingView"
                android:src="@drawable/wellbeing_white"
                android:contentDescription="@string/button_wellbeing" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/wellbeingText"
                android:text="@string/button_wellbeing"
                android:layout_marginLeft="0dp"
                android:contentDescription="@string/button_wellbeing"
                android:textColor="#FFFFFF"/>

        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/linearLayout3"
            android:layout_below="@+id/linearLayout2"
            android:layout_centerHorizontal="true"
            android:layout_weight="1">

            <ImageView
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:id="@+id/healthView"
                android:contentDescription="@string/button_health"
                android:src="@drawable/health_white"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/button_health"
                android:id="@+id/healthText"
                android:layout_marginLeft="8dp"
                android:contentDescription="@string/button_health"
                android:textColor="#FFFFFF"/>


        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/linearLayout3"
            android:id="@+id/linearLayout4"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="3dp">

            <ImageView
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:id="@+id/motivationView"
                android:contentDescription="@string/button_motivation"
                android:src="@drawable/motivation_white"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/button_motivation"
                android:id="@+id/motivationText"
                android:contentDescription="@string/button_motivation"
                android:textColor="#FFFFFF"
                android:gravity="left" />


            </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/linearLayout3"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:id="@+id/linearLayout5"
            android:layout_weight="1">

            <ImageView
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:id="@+id/ideasView"
                android:contentDescription="@string/button_ideas"
                android:src="@drawable/ideas_white" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/button_ideas"
                android:layout_marginLeft="10dp"
                android:id="@+id/ideasText"
                android:contentDescription="@string/button_ideas"
                android:textColor="#FFFFFF"/>

        </LinearLayout>

    </LinearLayout>


</RelativeLayout>

